<!DOCTYPE html>
<html>
<head>
  <title>Trippy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


   <nav class="navbar navbar-default col-md-12">
      <div class="container-fluid">
        <% if current_user %>
         <button type="button" class="btn btn-default navbar-btn navbar-right"><%= link_to "Places", locations_path %></button>
         <div class="navbar-right">You are logged in as: <%= current_user.username || current_user.name %></div>
         <button type="button" class="btn btn-default navbar-btn navbar-right"><%= link_to "Logout", sessions_path, method: :delete %></button>

       <% else %>

         <button type="button" class="header-btn btn btn-default navbar-btn navbar-right"><%= link_to "Sign Up", users_new_path %></button>
         <button type="button" class="btn btn-default navbar-btn navbar-right"><%= link_to "Login", login_path %></button>

       <% end %>
      </div>
   </nav>


<%= yield %>

</body>
</html>
