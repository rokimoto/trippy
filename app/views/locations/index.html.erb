<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>

<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>

<section>

<div class="row">
   <div class="col-lg-12"

      <!-- Flash messages -->
      <%= render 'layouts/flash' %>
      <!-- end of flash messages -->

      <div class="row">
         <!-- NEARBY LOCATIONS code block -->
         <div class="col-lg-3 location_panel">
            <h2>Nearby locations</h2>
                  <% if @locations %>
                      <% @locations.each do |location|%>
                      <li class="list-group-item">
                        <strong><%= link_to location.name, location_path(location) %></strong><% if location.reviews.any? %>:
                           <% location.average_rating.to_i.times do %>
                             <span class="glyphicon glyphicon-star">
                           <% end %>
                         <% end %>
                      </li>
                      <% end %>
                   </ul>
                    <% end %>
                      <%= link_to new_location_path do %>
                        <button type="button" class="btn btn-info col-lg-offset-1">Add Location</button>
                      <% end %>

         </div>

         <div class="col-lg-8">
            <%= form_tag locations_path, :method => :get, :class => 'inputting' do %>

               <div class="search_bar">
                   <p><span class="subtitle">Search For Anything  </span>
                      <%= text_field_tag :search, params[:search], class: "inputting" %>
                      <span>Search by:</span>
                      <%= label_tag(:name, "Name") %>
                      <%= radio_button_tag(:search_type, "Name", true) %>
                      <%= label_tag(:location, "Location") %>
                      <%= radio_button_tag(:search_type, "Location") %>
                      <%= submit_tag "Go!", :name => nil, class: 'search_btn' %>
                   </p>
               </div>
            <% end %>

            <div class="circle_map"id="map"></div>

         </div>
      </div>
   </div>
</div>
