<script type="text/javascript" src="<%= @endpoint %>"></script>

<section>

<div class="row">
   <div class="col-lg-12"

      <!-- Flash messages -->
      <%= render 'layouts/flash' %>
      <!-- end of flash messages -->

      <div class="row">
         <!-- NEARBY LOCATIONS code block -->
         <div class="location_panel col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-3">
            <h2>Nearby locations</h2>
                  <% if @locations %>
                      <% @locations.each do |location|%>
                      <li class="list-group-item" id="<%= location.id %>">
                        <strong><%= link_to location.name, "#" %></strong><% if location.reviews.any? %>
                           <% location.average_rating.to_i.times do %>
                             <span class="glyphicon glyphicon-star"></span>
                           <% end %>
                         <% end %>
                      </li>
                      <% end %>
                   </ul>
                   <br>
                    <% end %>
                      <%= link_to new_location_path do %>
                        <button type="button" class="btn btn-info col-lg-offset-4">Add Location</button>
                      <% end %>

         </div>

         <div class="col-sm-12 col-md-8 col-lg-8">

            <%= form_tag locations_path, :method => :get, :class => 'inputting' do %>
               <div class="search_bar col-lg-offset-2">
                   <p><span class="subtitle">Find Anything:  </span>
                      <%= text_field_tag :search, params[:search], class: "inputting" %>
                      <span>Search by:</span>
                      <%= label_tag(:name, "Name") %>
                      <%= radio_button_tag(:search_type, "Name", true) %>
                      <%= label_tag(:location, "Location") %>
                      <%= radio_button_tag(:search_type, "Location") %>
                      <%= submit_tag "Go!", :name => nil, class: 'search_btn' %>
                   </p>
               </div>
            <% end %>


            <div class="circle_map col-lg-offset-1"id="map"></div>

         </div>
      </div>
   </div>
</div>



<div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
        <%= form_for @like do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :location_id %>
        <%= f.submit "Add to favorites!", class: "btn" %>
        <% end %>
      </div>
      <div class="modal-body" id="myModalBody">
        No reviews yet
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
