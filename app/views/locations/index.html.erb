<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>

<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>

<section>
<div class="search_bar well col-lg-12">

   <h1>List of Locations</h1>

   <%= form_tag locations_path, :method => :get do %>
     <p>
       <%= text_field_tag :search, params[:search] %>
       <%= radio_button_tag(:search_type, "Name", true) %>
       <%= label_tag(:name, "Seach by name") %>
       <%= radio_button_tag(:search_type, "Location") %>
       <%= label_tag(:location, "Search by location") %>
       <%= submit_tag "Search", :name => nil %>
     </p>
   <% end %>
</div>
</section>

<div class="circle_map col-lg-5 col-lg-offset-1"id="map"></div>


<% if @target %>
<h1>You searched: <%= @target.name %></h1>
<% end %>


<div class="location_list col-lg-4 col-lg-offset-1">
   <h2>Nearby locations</h2>
   <% @locations.each do |location| %>
   <p>
     Name: <%= link_to location.name, location_path(location) %>
     Address: <%= location.address %>
     Latitude: <%= location.latitude %>
     Longitude: <%= location.longitude %>
     </p>
   <% end %>

   <% if current_user.admin? %>
     <%= link_to "Add location", new_location_path %>
   <% end %>
</div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
