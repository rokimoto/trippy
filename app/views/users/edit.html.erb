<!-- Flash messages -->
<%= render 'layouts/flash' %>
<!-- end of flash messages -->

<h1>Edit Profile</h1>
<%= form_for @user do |f| %>
  <p><%= f.text_field :name%> </p>
  <p><%= f.file_field :profile_picture %></p>
  <p><%= f.email_field :email %></p>
  <p><%= f.text_field :bio, placeholder: "Biography" %></p>
  <p><%= f.password_field :password %></p>
  <p><%= f.submit "Update Account" %></p>
<% end %>
