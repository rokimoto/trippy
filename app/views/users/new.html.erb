<div class="row">
   <div class="container">
      <div class="form col-lg-6">
         <h1>Sign Up</h1>
         <%= form_for @user, class: 'col-xs-6 col-md-offset-3' do |f| %>
           <p><%= f.text_field :name, class: "form-control", placeholder: "Name" %></p><br />
           <p><%= f.text_field :username, class: 'form-control', placeholder: "Username" %></p><br />
           <p><%= f.email_field :email, class: 'form-control', placeholder: "Email" %></p><br />
           <p><%= f.password_field :password, class: 'form-control', placeholder: "Password" %></p><br />
           <p><%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password" %></p><br />
           <p><%= f.submit "Create Account", class: 'btn subbtn col-lg-4 col-lg-offset-4' %></p>
         <% end %>
      </div>
   </div>
</div>
