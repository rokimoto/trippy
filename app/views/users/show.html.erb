<!-- Left-Side Profile Panel -->
<div class="row">
      <div class="col-lg-3">

         <div class="row text-center">
            <h2><%= @user.name %></h2>
         </div>
         <div class="row pimage text-center">
            <%= image_tag @user.profile_picture.url, class: 'proimage' if @user.profile_picture? %>
         </div>
         <br />
         <div class="row text-center">
            <% if current_user.id == @user.id %>
               <%= link_to "Edit Profile", edit_user_path, class: 'btn btn-info editor' %>
            <% end %>
         </div>

         <div class="row text-center bio">
            <%= @user.bio %>
         </div>

      </div>

      <div class="col-lg-9">
         <h2>hi</h2>
      </div>
</div>
